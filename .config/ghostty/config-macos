# Make the font a bit larger on mac:
font-size = 13

# Title bar font:
window-title-font-family = "Hasklug Nerd Font Mono Med"

# Treat the option key as alt:
macos-option-as-alt = true

# No shadow looks cleaner.
macos-window-shadow = false

# Stop Ghostty when I close everything.
quit-after-last-window-closed = true

# This is done automatically by Hyprland on Linux so using this here.
mouse-hide-while-typing = true

