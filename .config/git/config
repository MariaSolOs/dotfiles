[core]
	editor = nvim

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[filter "git-ignore"]
	clean = "sed '/#\\s*git-ignore$/d'"
	smudge = cat

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[fetch]
	prune = true

